<html>
    <head>
        <title>Registrar</title>
    </head>
    <body>
        <h1>Students</h1>
        {% if students is not empty %}
            <p>Here are all your Students:</p>
            <ul>
                {% for student in students %}
                    <li><a href="/students/{{ student.getId }}">{{ student.getStudentName }}</a></li>
                {% endfor %}
            </ul>
        {% endif %}

            <form action='/students' method='post'>
                <label for='student_name'>Student Name</label>
                <input id='student_name' name='student_name' type='text'>

                <label for='enrollment_date'>Enrollment Date</label>
                <input id='enrollment_date' name='enrollment_date' type='date'>

                <button type='submit'>Add Student</button>
            </form>

            <form action='/delete_students' method='post'>
                <button type='submit'>Clear</button>
            </form>

            <p><a href='/'>Home</a></p>

    </body>
</html>
